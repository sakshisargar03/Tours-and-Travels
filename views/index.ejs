<!DOCTYPE html>
<html>
<head>
  <title>Tours & Travels</title>
  <link rel="stylesheet" href="../css/style.css">
  </head>
<body>

<section class="hero">
  <h1>Explore Your Dream Holiday</h1>
  <p>Select a type from dropdown to view packages</p>
</section>

<div class="filter-container">
  <label for="packageType">Filter by Type:</label>
  <select id="packageType">
    <option value="all">All Packages</option>
    <% if (typeof types !== 'undefined' && types.length > 0) { %>
      <% types.forEach(type => { %>
        <option value="<%= type %>"><%= type %></option>
      <% }); %>
    <% } %>
  </select>
</div>

<div id="packagesContainer">
  <% packages.forEach(pkg => { %>
    <div class="package-card" data-type="<%= pkg.type %>">
      <img src="<%= pkg.image %>" alt="<%= pkg.name %>">
      <h3> <%= pkg.name %> </h3>
      <p><%= pkg.description %></p>
      <p>Price: â‚¹<%= pkg.price %></p>
      
      <h4>Hotels:</h4>
      <ul>
        <% pkg.hotels.forEach(hotel => { %>
          <li><%= hotel %></li>
        <% }) %>
      </ul>
      
      <h4>Places:</h4>
      <ul>
        <% pkg.places.forEach(place => { %>
          <li><%= place %></li>
        <% }) %>
      </ul>
      
      <div id="map<%= pkg._id %>" class="map"></div>
      <script>
        function initMap<%= pkg._id %>() {
          // Parse latitude and longitude values correctly
          const loc = { lat: parseFloat('<%= pkg.location.lat %>'), lng: parseFloat('<%= pkg.location.lng %>') };
          const map = new google.maps.Map(document.getElementById("map<%= pkg._id %>"), { zoom: 6, center: loc });
          new google.maps.Marker({ position: loc, map: map });
        }
        // Defer map initialization until the API is loaded (handled by the loader script below)
        // For simplicity, we keep the immediate call here, but modern practice defers it.
        initMap<%= pkg._id %>();
      </script>
    </div>
  <% }) %>
</div>

<script src="https://maps.googleapis.com/maps/api/js?key=<%= apiKey %>&callback=initAllMaps"></script>
<script src="/js/script.js"></script>
</body>
</html>